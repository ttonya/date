{
	"compilerOptions": {
		"baseUrl": ".",
		"target": "es5",
		"module": "commonjs",
		"declaration": true,
		"paths": {
			"src": ["./src"]
		},
		"rootDir": "./",
		"outDir": "./dist",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true
	},
	"include": ["./src/*"]
}
